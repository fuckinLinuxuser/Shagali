---
// src/components/ProjectsSection.astro

// Можно передавать массив проектов, но пока оставим статически
const projects = [
  {
    title: "Скрипичное Шоу",
    description: "Виртуозное сочетание музыки и драмы.",
    image: "/images/projects/skripka-show.jpg",
    alt: "Скрипичное Шоу"
  },
  {
    title: "Родной Мой Кукушонок",
    description: "Трогательная история о семье и потере.",
    image: "/images/projects/kukushonok.jpg",
    alt: "Родной Мой Кукушонок"
  },
  {
    title: "Мамочка, Купи Собаку",
    description: "Юмористическая комедия о повседневных желаниях.",
    image: "/images/projects/mamochka-sobaka.jpg",
    alt: "Мамочка, Купи Собаку"
  },
  {
    title: "Неделя Испании",
    description: "Фламенко, страсть и испанский колорит.",
    image: "/images/projects/flamenko.jpg",
    alt: "Неделя Испании"
  }
];
---

<section id="projects" class="section projects">
  <div class="container">
    <h2>Проекты и Билеты</h2>

    <div class="project-grid">
      {
        projects.map(project => (
          <div class="project-card">
            <div class="project-image-wrapper">
              <img
                src={project.image}
                alt={project.alt}
                class="project-image"
                loading="lazy"
              />
            </div>

            <h3>{project.title}</h3>
            <p>{project.description}</p>

            <a href="#" class="btn">Купить билет</a>
          </div>
        ))
      }
    </div>
  </div>
</section>
